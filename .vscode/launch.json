    "version": "0.2.0",
    "configurations": [
        {
            "name": "assign3_debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lcloud_sim",
            "args": ["-v", "cmpsc311-assign3-manifest.txt", "cmpsc311-assign3-workload.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}